<div align="center"></div>
    <h1>Dashboard</h1>

    <form action="/createCharacter" method="post">
        Name:<br>
        <input type="text" name="name" value="">
        <br>
        <input type="radio" name="charClass" value="assassin"> Assassin<br>
        <input type="radio" name="charClass" value="knight"> Knight<br>
        <input type="radio" name="charClass" value="spellcaster"> Spellcaster<br>
        <input type="radio" name="charClass" value="warrrior"> Warrior<br>
        <input type="submit" value="Create">
    </form>
    <br>
    <h2>List of Characters</h2>
    <br>
    <div>
        <ul>
            <% characters.forEach(function(character) { %>
            <div>
                <div>
                    <!--output character attributes-->
                    <h3><%= character.name %></h3>
                    <p>
                        <%= character.charClass %>
                    </p>
                </div>
                <div>
                <!-- show button for optimize -->
                <!-- check if optimized already -->
                <% if(!character.optimized) { %>
                    <p>
                        </div>
                        Select up to 2: 
                        <form action="/optimize/<%=character.id %>" method="post">
                            <input type="checkbox" name="optimizeAttribute" value="health"> Health<br>
                            <input type="checkbox" name="optimizeAttribute" value="attack"> Attack<br>
                            <input type="checkbox" name="optimizeAttribute" value="defense"> Defense<br>
                            <input type="checkbox" name="optimizeAttribute" value="mana"> Mana<br>
                            <input type="submit" value="Optimize">
                        </form>
                        <div>
                    </p>
                    <% } else { %>
                        Character has already been optimized
                    <% } %>
                </div>
            </div>
            <% }); %>
        </ul>
    </div>

</div>
